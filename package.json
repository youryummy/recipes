{
  "name": "recipes-service",
  "description": "YourYummy recipes manager service",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "dev": "node -r dotenv/config app.js",
    "build": "docker build . -t account-service:1.0.0 -t account-service:latest",
    "test:unit": "mocha --exit --recursive --timeout 5000 -r tests/setup.test.js tests/unit",
    "test:components": "mocha --exit --recursive --timeout 7000 -r tests/setup.test.js tests/components",
    "test": "npm run test:unit && npm run test:component",
    "cov": "c8 --reporter=lcov --reporter=text npm run test",
    "lint": "eslint ./ --ignore-pattern \"tests/**\"",
    "format": "npm run lint -- --fix"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.1.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "axios": "^1.2.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "module": "^1.2.5",
    "mongodb": "^4.12.1",
    "mongoose": "^6.7.5",
    "morgan": "~1.9.1",
    "opossum": "^7.0.1",
    "pug": "2.0.0-beta11",
    "recachegoose": "^9.1.0",
    "swagger-jsdoc": "^6.2.7",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.3",
    "mocha": "^10.2.0",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3"
  }

}